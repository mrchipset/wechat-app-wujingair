/* pages/info/info.wxss */
@import "../../ripples.wxss";

.bgcover {
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden;
} 

.basic-info {
  width: 80%;
  margin: 2% 10%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.weather-icon {
  width: 30%;
}
.loc-label {
  width: 70%;
  font-size: 48rpx;
  margin: 0 10%;
  text-align: center;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.temhum-label {
  width: 50%;
  font-size: 48rpx;
  margin: 0 10%;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.temhum-logo {
  width: 64rpx;
  margin-right: 5%;
}

.guide-arrow {
  display: flex;
  align-self: center;
  justify-content: center;
  margin: 0 auto;
  opacity: 0.3;
}

.data-chart {
  width: 80%;
  margin: 2% 10%;
  border: #000 1px solid;
}