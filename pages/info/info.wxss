/* pages/info/info.wxss */
@import "../../ripples.wxss";

.bgcover {
  height: 100%; 
  width: 100%; 
  overflow: hidden;
  display: flex; 
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  -webkit-text-size-adjust:none;
  -webkit-user-select: none;
  font-size: 35rpx;
  color: #333;
  font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
} 

.basic-info {
  width: 80%;
  margin: 2% 10%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.weather-icon {
  width: 30%;
}
.loc-label {
  width: 70%;
  font-size: 48rpx;
  margin: 0 10%;
  text-align: center;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.temhum-label {
  width: 50%;
  font-size: 48rpx;
  margin: 0 10%;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.temhum-logo {
  width: 64rpx;
  margin-right: 5%;
}

.guide-arrow {
  display: flex;
  align-self: center;
  justify-content: center;
  margin: 0 auto;
  opacity: 0.3;
}

.canvas {
  width: 80%;
  height: 33%;
  justify-content: center;
  margin: 0 auto;
}